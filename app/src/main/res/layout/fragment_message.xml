<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gaston.ciudaduniversitariainteligente.MessageFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/messageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="90px"
            android:text="Agregar mensaje" />

        <TextView
            android:id="@+id/messageMensaje"
            android:layout_below="@id/messageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese un mensaje que compartir con los alumnos de tu misma carrera"/>

        <EditText
            android:id="@+id/messageText"
            android:layout_below="@id/messageMensaje"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:id="@+id/messageEnviar"
            android:layout_below="@id/messageText"
            android:text="Enviar!"/>
    </RelativeLayout>
    </ScrollView>

</FrameLayout>
